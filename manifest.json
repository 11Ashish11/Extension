{
  "name": "Ashish Extension",
  "version": "1.0",
  "description": "This is a demo extension by Ashish Bhoya",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
      {
          "resources": [
              "assests/bookmark.jpeg"
          ],
          "matches": ["*://*/*"]
      }
  ],
  "action": {
      "default_icon": {
          "16" : "assests/icon.jpeg",
          "32" : "assests/icon.jpeg",
          "64" : "assests/icon.jpeg"
      },
      "default_title": "My YT Bookmarks",
      "default_popup": "popup.html"
  },
  "manifest_version": 3
}
