{
  "manifest_version": 3,
  "name": "Color Transformer Extension",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    { "matches": ["*://*/*"], "js": ["contentScript.js"], "all_frames": true }
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assests/icon.jpeg",
      "48": "assests/icon.jpeg",
      "128": "assests/icon.jpeg"
    }
  },
  "icons": {
    "16": "assests/icon.jpeg",
    "48": "assests/icon.jpeg",
    "128": "assests/icon.jpeg"
  }
}
